package sortieren;

/**
 * @Author Marco Hoppe
 */
public class BubbleSort extends ArrayClass{

	public static String zahlenSort(int[] z) { // Methode zum sortieren der Zahlenreihe
	        int k;
	        for (int i = 0; i < z.length - 1; i++) {
	            if (z[i] < z[i + 1]) {
	                continue;
	            }
	            k = z[i];
	            z[i] = z[i + 1];
	            z[i + 1] = k;
	            //zahlenSort(z);
	        }
	        return zToString(z);
	    } 
	
	public static String zToString(int[] z) { 	
		
		String s = ""; 							
		for (int i = 0; i < z.length; i++) { 	
			s = s + z[i] + ","; 				
		} 										
		s = s.substring(0, s.length() - 1); 	
												
		s = s + "\n"; 							
		return s; 								
	}

}
